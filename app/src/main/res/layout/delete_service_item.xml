    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/cardView"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ServiceImage"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/download" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/NameService"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center|start"
                    android:maxLines="2"
                    android:text="Explored"
                    android:textColor="@color/TextColor_Gallery"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/ServiceRating"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center|end"
                    android:text="â­: 5.0"
                    android:textColor="#EFA632"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/ServiceView"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:lines="1"
                    android:text="Views: 5000"
                    android:textColor="@color/SubTextColor_Gallery"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/ServicePrice"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="end|center"
                    android:lines="1"
                    android:text="Form: US$500"
                    android:textColor="@color/SubTextColor_Gallery"
                    android:textSize="15sp" />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.4"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/DeleteItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:drawableStartCompat="@drawable/delete_black_24dp" />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>